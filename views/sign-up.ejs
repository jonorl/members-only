<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title>Sign Up</title>
  </head>
  <header>
    <a href="/">Home</a>

    <% if (user) { %>
    <a href="/new-message">Leave a message</a>

    <a href="/profile">Profile</a>

    <a href="/logout">Logout</a>

    <% } else { %>

    <a href="/login">Login</a>

    <a href="/sign-up">Sign Up</a>

    <% } %>
  </header>
  <body>
    <h1>Sign Up</h1>
    <form action="/sign-up" method="POST">
      <label for="firstName">First Name</label>
      <input id="firstName" name="firstName" placeholder="John" type="text" />
      <label for="lastName">Last Name</label>
      <input id="lastName" name="lastName" placeholder="Doe" type="text" />
      <label for="email">email</label>
      <input id="email" name="email" placeholder="john@doe.com" type="email" />
      <label for="password">Password</label>
      <input
        id="password"
        name="password"
        type="password"
        minlength="8"
        required
      />
      <label for="passwordConfirmation">Repeat Password</label>
      <input
        id="passwordConfirmation"
        name="passwordConfirmation"
        type="password"
        minlength="8"
        required
      />
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }); %>
      </ul>
      <% } %>
      <button type="submit">Sign Up</button>
    </form>
  </body>
</html>
